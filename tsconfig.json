{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2019",
    "lib": ["ES2020"],
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "sourceMap": true,
    "declaration": true,
    "resolveJsonModule": true,
    "alwaysStrict": true,
  },
  
  "include": [
    "src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
